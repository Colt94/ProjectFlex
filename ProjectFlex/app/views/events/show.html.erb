<head>
  <title>Event Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<div class="card">
  <div class="card-header">
    <h1> <%= @event.name %></h1>
    <%= link_to "Back to Calendar", "/calendar" %>
  </div>
  <div class="card-body">
    <div class="row">
      Date: <%= @event.date %>
    </div>
    <div class="row">
      Points: <%= @event.point_value %> <%= @event.point_type %>
    </div>
  </div>
</div>
