<% content_for(:sidebar) do %>
    <% render :partial => "layouts/sidebar" %>
<% end %>

<head>
  <title>Event Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<div class="col-10 offset-2"
  <div class="card">
    <div class="card-header">
      <h1> <%= @event.name %></h1>
      <%= link_to "Back to Calendar", "/calendar" %>
    </div>
    <div class="card-body">
      <div class="row">
        <h3>Date: <%= DateTime.parse(@event.date).strftime("%l:%M%p, %m/%d/%Y") %></h3>
      </div>
      <div class="row">
        <h3>Points: <%= @event.point_value %> <%= @event.point_type %></h3>
      </div>
      <div class="row">
        <% if @registered %>
          <h4>Registered</h4>
        <% else %>
          <%= button_to("Register", event_attendances_path(:event_id => @event.id)) %>
        <% end %>
      </div>
      
      </br></br></br>
      <div class="table">
        <table>
          <thstyle="text-align:center">
            <td>User</td>
            <td>Committee</td>
            <td>Approve</td>
            <td>Reject</td>
          </th>
          
          <% @unapproved_users.each do |user| %>
            <tr style="text-align:center">
              <td> <%=user.user_id%></td>
              <td>Test Committee</td>
              <td>
                <%= button_to "Approve", events_approve_attendance_path(:event => user.event_id, :user => user.user_id), method: :post %>
                <%#= link_to "Approve Attendance", event_path(user.event_id) %>
              </td>
              <td>
                <%= button_to "Reject", event_attendance_path(:event => user.event_id, :user => user.user_id), method: :delete %>
              </td>
            </tr>
          <% end %>
          
        </table>
      </div>
      
    </div>
  </div>
  
  
  <!-- I don't think the code below is shown at all -->
