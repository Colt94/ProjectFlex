<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'animate.css' %>
</head>
<div class="offset-md-2 col-md-10 col-xs-12 animated fadeInRightBig fast">
    <div class="card mt-3">
        <div class="card-header">
            <h1>My Points</h1>
            <p>View your points here!</p>
        </div>
        <div class="card-body">
            <span style="font-weight:bold"><%= @user.name %>'s Total Points: <%= @user_total %> </span><i>(Required: 15)</i></br>
            <br><span style="font-weight:bold">Points Requirements:</span> 
            <% if @made_points == false %>
                <span style="color:red"> NOT MET </span>
            <% else %>
                <% if @made_points == true %>
                    <span style="color:green"> MET </span>
                <% end %>
            <% end %>
            </br></br>         
            
            <span style="font-weight:bold">FR | Subtotal: <%= @fr_total %> </span>
            <i>(Required: 2)</i></br>
            <% @fr_points.each do |fr| %>
            <%= link_to fr.name, event_path(fr) %></br>
            <% end %></br>
            
            <span style="font-weight:bold">Social | Subtotal: <%= @social_total %> </span>
            <i> (Required: 3)</i></br>
            <% @social_points.each do |social| %>
            <%= link_to social.name, event_path(social) %></br>
            <% end %></br>
            
            <span style="font-weight:bold">Service | Subtotal: <%= @service_total %> </span>
            <i>  (Required: 3)</i></br>
            <% @service_points.each do |service| %>
            <%= link_to service.name, event_path(service) %></br>
            <% end %></br>
            
            <span style="font-weight:bold">LD | Subtotal: <%= @ld_total %> </span>
            <i> (Required: 1)</i></br>
            <% @ld_points.each do |ld| %>
            <%= link_to ld.name, event_path(ld) %></br>
            <% end %></br>
            
            <span style="font-weight:bold">PR | Subtotal: <%= @pr_total %> </span>
            <i>(Required: 3)</i></br>
            <% @pr_points.each do |pr| %>
            <%= link_to pr.name, event_path(pr) %></br>
            <% end %></br>
        </div>
    </div>
</div>

<% content_for(:sidebar) do %>
    <% render :partial => "layouts/sidebar" %>
<% end %>