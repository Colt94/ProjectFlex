<head>
  <title>FLEX Calendar</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="sorttable.js"></script>
</head>
<div class="col-10 offset-2">
    <div class="card">
        <div class="card-header">
            <h1>Manage Users</h1>
            <%= link_to "Home", "/" %>
            <% if @user.permissions == "exec" %>
            <button class="btn"
                    onclick="">
            Add User
            </button>
            <% end %>
        </div>
        <div class="card-body">
            <div class="row collapse" id="addNewUserForm">
                <div class="card col-10 pt-3 pb-3 mb-3">
                    
                </div>
            </div>
            <div class="row">
                <table class="table sortable">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Level</th>
                            <th scope="col">Zone</th>
                            <th scope="col">Points</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @allUsers.each{ |user| %>
                        <tr>
                            <td scope="col"><%= user.name %></th>
                            <td scope="col"><%= user.permissions %></th>
                            <td scope="col">Add zone to schema</th>
                            <td scope="col"><%= @allPoints[user.name] %></td>
                            <td scope="col">Update/delete user</th>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<% content_for(:sidebar) do %>
    <% render :partial => "layouts/sidebar" %>
<% end %>